<div id="hero">
  <div id="hero-content">
    <h1><%= title %></h1>
    <p><%= keyword %></p>
    <a class="btn btn-lg" href="#" role="button" data-toggle="modal" data-target="#consult">Consulting</a>
  </div>
  <div class="gradient-mask"></div>
</div>

<div class="modal fade" id="consult" tabindex="-1" role="dialog">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Contact Us</h4>
          </div>
          <div class="modal-body">
            <form action=<%= "/services/" + page %> method="POST">
              <div class="form-group">
                <input type="text" id="name" class="form-control" name="name" placeholder="Name" maxlength="256" required autofocus="true"/>
              </div> 
              <div class="form-group">
                <input type="email" id="email" class="form-control" name="email" placeholder="E-mail address" maxlength="256" required/>
              </div>
              <div class="form-group">
                <input type="text" id="subject" class="form-control" name="subject" placeholder="Subject"maxlength="256"  required/>
              </div>
              <div class="form-group">
                <textarea id="message" class="form-control" name="message" placeholder="Type your message here" maxlength="5000" required></textarea>
              </div>
              <button type="submit" class="btn btn-default">Submit</button> 
            </form>
          </div>
      </div>
  </div> 
</div>